---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const popularLinks = [
  { name: 'Home', href: '/', description: 'Return to our homepage' },
  { name: 'About Us', href: '/about', description: 'Learn about our mission' },
  { name: 'Programs', href: '/programs', description: 'Explore our initiatives' },
  { name: 'Contact', href: '/contact', description: 'Get in touch with us' },
];
---

<Layout title="Page Not Found" description="The page you're looking for could not be found. Let us help you find what you need.">
  <Header slot="header" />

  <section class="min-h-[60vh] flex items-center bg-gradient-to-br from-[var(--color-cream)] to-white py-20">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <!-- 404 Illustration -->
      <div class="mb-8">
        <div class="inline-flex items-center justify-center w-32 h-32 bg-[var(--color-primary)]/10 rounded-full mb-6">
          <svg class="w-16 h-16 text-[var(--color-primary)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
        <h1 class="text-6xl md:text-8xl font-bold text-[var(--color-primary)] mb-4">404</h1>
        <h2 class="text-2xl md:text-3xl font-bold text-gray-900 mb-4">Page Not Found</h2>
        <p class="text-lg text-gray-600 max-w-md mx-auto mb-8">
          Oops! The page you're looking for seems to have wandered off. Don't worry, we'll help you find your way.
        </p>
      </div>

      <!-- Action Buttons -->
      <div class="flex flex-wrap justify-center gap-4 mb-12">
        <a
          href="/"
          class="inline-flex items-center gap-2 bg-[var(--color-teal)] text-white px-6 py-3 rounded-full font-semibold hover:bg-[var(--color-teal)]/90 transition-colors"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
          </svg>
          Go Home
        </a>
        <a
          href="/contact"
          class="inline-flex items-center gap-2 border-2 border-[var(--color-teal)] text-[var(--color-teal)] px-6 py-3 rounded-full font-semibold hover:bg-[var(--color-teal)] hover:text-white transition-colors"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
          </svg>
          Contact Us
        </a>
      </div>

      <!-- Popular Links -->
      <div class="bg-white rounded-2xl shadow-sm p-8">
        <h3 class="text-lg font-semibold text-gray-900 mb-6">Popular Pages</h3>
        <div class="grid sm:grid-cols-2 gap-4">
          {popularLinks.map(link => (
            <a
              href={link.href}
              class="flex items-start gap-3 p-4 rounded-xl hover:bg-gray-50 transition-colors group"
            >
              <div class="w-10 h-10 bg-[var(--color-teal)]/10 rounded-lg flex items-center justify-center flex-shrink-0 group-hover:bg-[var(--color-teal)]/20 transition-colors">
                <svg class="w-5 h-5 text-[var(--color-teal)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
                </svg>
              </div>
              <div class="text-left">
                <p class="font-medium text-gray-900 group-hover:text-[var(--color-teal)] transition-colors">{link.name}</p>
                <p class="text-sm text-gray-500">{link.description}</p>
              </div>
            </a>
          ))}
        </div>
      </div>
    </div>
  </section>

  <Footer slot="footer" />
</Layout>
