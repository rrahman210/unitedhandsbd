---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import NewsletterSignup from '../components/NewsletterSignup.astro';
import OptimizedImage from '../components/OptimizedImage.astro';

// Helper function to get next Friday from a given date
function getNextFriday(fromDate: Date): Date {
  const date = new Date(fromDate);
  const dayOfWeek = date.getDay();
  const daysUntilFriday = (5 - dayOfWeek + 7) % 7 || 7; // 5 = Friday
  date.setDate(date.getDate() + daysUntilFriday);
  return date;
}

// Helper function to format date
function formatDate(date: Date) {
  const months = ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec'];
  return {
    day: date.getDate(),
    month: months[date.getMonth()]
  };
}

// Calculate the next two Fridays
const today = new Date();
const nextFriday = getNextFriday(today);
const fridayAfterNext = getNextFriday(new Date(nextFriday.getTime() + 24 * 60 * 60 * 1000));

const upcomingFriday1 = formatDate(nextFriday);
const upcomingFriday2 = formatDate(fridayAfterNext);

const programs = [
  {
    id: 'education',
    title: 'Educational Outreach',
    description: 'We provide quality education and learning opportunities to underprivileged children and communities, helping break the cycle of poverty through knowledge and skills development.',
