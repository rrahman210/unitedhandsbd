    description: 'Our healthcare initiatives include free medical camps, regular health checkups, mental health support, and suicide prevention programs to ensure everyone has access to essential care.',
    features: ['Free medical camps', 'Mental health counseling', 'Suicide prevention', 'Health awareness campaigns'],
    image: '/images/gallery/555385630_122105180217007573_5951213828479555981_n.jpg',
    icon: 'healthcare'
  },
  {
    id: 'community',
    title: 'Community Building',
    description: 'We strengthen local communities through engagement programs, skill development workshops, and sustainable initiatives that foster self-reliance and mutual support.',
    features: ['Community gatherings', 'Leadership training', 'Women empowerment', 'Youth engagement'],
    image: '/images/gallery/605359263_122119405011007573_7132557887102658754_n.jpg',
    icon: 'community'
  },
  {
    id: 'food',
    title: 'Food Distribution',
    description: 'Regular food drives and nutrition programs combat hunger and food insecurity, ensuring that families have access to nutritious meals.',
    features: ['Weekly food drives', 'Ramadan food packs', 'Nutrition education', 'Emergency food relief'],
    image: '/images/gallery/605340597_122119405491007573_4746787242545134854_n.jpg',
    icon: 'food'
  },
  {
    id: 'legal',
    title: 'Legal Assistance',
    description: 'Our legal aid program provides free legal support to those who cannot afford representation, protecting their rights and ensuring access to justice.',
    features: ['Free legal consultations', 'Document assistance', 'Rights awareness', 'Court representation'],
    image: '/images/gallery/587840088_122115120123007573_7575782414095402221_n.jpg',
    icon: 'legal'
  },
  {
    id: 'skills',
    title: 'Skills Development',
    description: 'We offer vocational training and skill development programs to help individuals gain employment and achieve financial independence.',
    features: ['Computer training', 'Tailoring courses', 'Small business mentoring', 'Job placement support'],
    image: '/images/gallery/571197361_122112067671007573_2515374789331075447_n.jpg',
    icon: 'skills'
