        <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6">
          Building Stronger Communities Together
        </h1>
        <p class="text-lg text-gray-600">
          We run diverse programs focused on education, healthcare, community development, and sustainable livelihoods to create lasting positive impact.
        </p>
      </div>
    </div>
  </section>

  <!-- Programs List -->
  <section class="py-20 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="space-y-20">
        {programs.map((program, index) => (
          <div id={program.id} class="scroll-mt-24">
            <div class={`grid lg:grid-cols-2 gap-12 items-center ${index % 2 === 1 ? 'lg:flex-row-reverse' : ''}`}>
              <div class={index % 2 === 1 ? 'lg:order-2' : ''}>
                <div class="flex items-center gap-3 mb-4">
                  <div class="w-12 h-12 bg-gradient-to-br from-[var(--color-primary)] to-[var(--color-teal)] rounded-xl flex items-center justify-center">
                    {program.icon === 'education' && (
                      <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l9-5-9-5-9 5 9 5z" />
