                      </svg>
                    )}
                    {program.icon === 'healthcare' && (
                      <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 0v4m0-4h4m-4 0H8" />
                      </svg>
                    )}
                    {program.icon === 'community' && (
                      <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                      </svg>
                    )}
                    {program.icon === 'food' && (
                      <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z" />
                      </svg>
                    )}
                    {program.icon === 'legal' && (
                      <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 6l3 1m0 0l-3 9a5.002 5.002 0 006.001 0M6 7l3 9M6 7l6-2m6 2l3-1m-3 1l-3 9a5.002 5.002 0 006.001 0M18 7l3 9m-3-9l-6-2m0-2v2m0 16V5m0 16H9m3 0h3" />
                      </svg>
                    )}
                    {program.icon === 'skills' && (
                      <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
                      </svg>
                    )}
                  </div>
                  <span class="text-[var(--color-teal)] font-medium text-sm uppercase tracking-wider">Program</span>
                </div>
                <h2 class="text-3xl font-bold text-gray-900 mb-4">{program.title}</h2>
                <p class="text-gray-600 mb-6 leading-relaxed">{program.description}</p>
                <ul class="grid sm:grid-cols-2 gap-3 mb-6">
                  {program.features.map(feature => (
                    <li class="flex items-center gap-2">
                      <svg class="w-5 h-5 text-[var(--color-teal)] flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                      </svg>
                      <span class="text-gray-700 text-sm">{feature}</span>
                    </li>
                  ))}
                </ul>
                <a
                  href="/contact"
                  class="inline-flex items-center gap-2 text-[var(--color-teal)] font-semibold hover:text-[var(--color-primary)] transition-colors"
                >
                  Get Involved
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                  </svg>
                </a>
              </div>
              <div class={index % 2 === 1 ? 'lg:order-1' : ''}>
                <OptimizedImage
                  src={program.image}
                  alt={program.title}
                  class="rounded-2xl shadow-lg w-full h-80 object-cover"
                />
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Upcoming Events -->
  <section class="py-20 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center max-w-2xl mx-auto mb-12">
        <span class="text-[var(--color-teal)] font-medium text-sm uppercase tracking-wider">Upcoming</span>
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mt-2 mb-4">
          Upcoming Events
        </h2>
        <p class="text-gray-600">
          Join us at our upcoming community events and make a difference.
        </p>
      </div>
      <div class="grid md:grid-cols-2 gap-6" id="upcoming-events">
        <!-- This Friday's Food Distribution -->
        <div class="bg-white rounded-2xl p-6 shadow-sm">
          <div class="flex items-center gap-4 mb-4">
            <div class="bg-[var(--color-teal)]/10 rounded-xl p-3 text-center min-w-[60px]">
              <span id="friday1-day" class="block text-2xl font-bold text-[var(--color-teal)]">{upcomingFriday1.day}</span>
              <span id="friday1-month" class="text-xs text-gray-600">{upcomingFriday1.month}</span>
            </div>
            <div>
              <h3 class="font-semibold text-gray-900">Free Food Distribution</h3>
              <p class="text-sm text-gray-500">3:00 PM onwards</p>
            </div>
          </div>
          <p class="text-gray-600 text-sm mb-4">
            Weekly food distribution drive for families in need. Join us every Friday!
          </p>
          <p class="text-sm text-gray-500">
            <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
            </svg>
            4/2 Kadamtala, Dhaka 1214
          </p>
        </div>
        <!-- Next Friday's Food Distribution -->
        <div class="bg-white rounded-2xl p-6 shadow-sm">
          <div class="flex items-center gap-4 mb-4">
            <div class="bg-[var(--color-primary)]/10 rounded-xl p-3 text-center min-w-[60px]">
              <span id="friday2-day" class="block text-2xl font-bold text-[var(--color-primary)]">{upcomingFriday2.day}</span>
              <span id="friday2-month" class="text-xs text-gray-600">{upcomingFriday2.month}</span>
            </div>
            <div>
              <h3 class="font-semibold text-gray-900">Free Food Distribution</h3>
              <p class="text-sm text-gray-500">3:00 PM onwards</p>
            </div>
          </div>
          <p class="text-gray-600 text-sm mb-4">
            Weekly food distribution drive for families in need. Join us every Friday!
          </p>
          <p class="text-sm text-gray-500">
            <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
            </svg>
            4/2 Kadamtala, Dhaka 1214
          </p>
        </div>
      </div>
      <!-- Facebook Events Link -->
      <div class="mt-8 text-center">
        <p class="text-gray-600 mb-4">Stay updated with all our events on social media</p>
        <div class="flex flex-wrap justify-center gap-4">
          <a
            href="https://www.facebook.com/2025uhb/events"
            target="_blank"
            rel="noopener"
            class="inline-flex items-center gap-2 bg-[#1877F2] text-white px-6 py-3 rounded-full font-semibold hover:bg-[#166FE5] transition-colors"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/></svg>
            Facebook Events
          </a>
          <a
            href="https://www.linkedin.com/company/unitedhandsbangladesh"
            target="_blank"
            rel="noopener"
            class="inline-flex items-center gap-2 bg-[#0A66C2] text-white px-6 py-3 rounded-full font-semibold hover:bg-[#004182] transition-colors"
          >
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/></svg>
            Follow on LinkedIn
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="py-20 bg-[var(--color-teal)]">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl md:text-4xl font-bold text-white mb-6">
        Want to Support Our Programs?
      </h2>
      <p class="text-white/90 text-lg mb-8 max-w-2xl mx-auto">
        Join us in making a difference through volunteering, partnerships, or spreading awareness about our work.
      </p>
      <div class="flex flex-wrap justify-center gap-4">
        <a
          href="/contact"
          class="bg-white text-[var(--color-teal)] px-8 py-3.5 rounded-full font-semibold hover:bg-[var(--color-cream)] transition-colors"
        >
          Get Involved
        </a>
        <a
          href="/gallery"
          class="border-2 border-white text-white px-8 py-3.5 rounded-full font-semibold hover:bg-white hover:text-[var(--color-teal)] transition-colors"
        >
          See Our Impact
        </a>
      </div>
    </div>
  </section>

  <!-- Newsletter -->
  <section class="py-20 bg-white">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <NewsletterSignup />
    </div>
  </section>

  <Footer slot="footer" />
</Layout>

<script>
  // Client-side hydration to ensure dates are always current
  function getNextFriday(fromDate: Date): Date {
    const date = new Date(fromDate);
    const dayOfWeek = date.getDay();
    const daysUntilFriday = (5 - dayOfWeek + 7) % 7 || 7;
    date.setDate(date.getDate() + daysUntilFriday);
    return date;
  }

  function formatDate(date: Date) {
    const months = ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec'];
    return {
      day: date.getDate(),
      month: months[date.getMonth()]
    };
  }

  // Update dates on page load
  const today = new Date();
  const nextFriday = getNextFriday(today);
  const fridayAfterNext = getNextFriday(new Date(nextFriday.getTime() + 24 * 60 * 60 * 1000));

  const friday1 = formatDate(nextFriday);
  const friday2 = formatDate(fridayAfterNext);

  const friday1Day = document.getElementById('friday1-day');
  const friday1Month = document.getElementById('friday1-month');
  const friday2Day = document.getElementById('friday2-day');
  const friday2Month = document.getElementById('friday2-month');

  if (friday1Day) friday1Day.textContent = String(friday1.day);
  if (friday1Month) friday1Month.textContent = friday1.month;
  if (friday2Day) friday2Day.textContent = String(friday2.day);
  if (friday2Month) friday2Month.textContent = friday2.month;
</script>
