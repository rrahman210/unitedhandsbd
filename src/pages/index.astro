const impactImages = [
  { src: '/images/gallery/605340597_122119405491007573_4746787242545134854_n.jpg', alt: 'Smiling boy receiving food with joy' },
  { src: '/images/gallery/555385630_122105180217007573_5951213828479555981_n.jpg', alt: 'Free medical services for community' },
  { src: '/images/gallery/581931251_122113960773007573_7320039804328164070_n.jpg', alt: 'Grandmother and child with food' },
