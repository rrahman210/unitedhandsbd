  { src: '/images/gallery/571197361_122112067671007573_2515374789331075447_n.jpg', alt: 'Two women receiving food packages' },
  { src: '/images/gallery/605359263_122119405011007573_7132557887102658754_n.jpg', alt: 'Bringing joy to people with disabilities' },
