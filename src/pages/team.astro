---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import OptimizedImage from '../components/OptimizedImage.astro';

const teamMembers = [
  {
    name: 'Anisur Rahman',
    role: 'Founder & CEO',
    bio: 'Dedicated human rights advocate with a vision to empower communities. Former President of Bangladesh Korea Migrant Center with deep expertise in advocacy and community organizing.',
    image: '/images/team/anisur-rahman-v3.png',
    social: {
      linkedin: 'https://linkedin.com/in/anisur-rahman-490145385',
      facebook: 'https://facebook.com/2025uhb'
    }
  },
];

const advisors = [
  { name: 'Community Leaders', role: 'Advisory Board', description: 'Respected community leaders providing guidance on local initiatives' },
  { name: 'Healthcare Professionals', role: 'Medical Advisory', description: 'Doctors and nurses volunteering their expertise for medical camps' },
  { name: 'Legal Experts', role: 'Legal Advisory', description: 'Lawyers providing pro-bono legal assistance to those in need' },
];
---

<Layout 
  title="Our Team" 
  description="Meet the dedicated team behind United Hands Bangladesh. Our passionate leaders and volunteers work tirelessly to serve communities across Bangladesh."
  keywords="United Hands Bangladesh team, Anisur Rahman, nonprofit leadership Bangladesh, humanitarian workers Dhaka, charity volunteers Bangladesh"
>
  <Header slot="header" />

  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-[var(--color-cream)] to-white py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-3xl">
        <span class="inline-block bg-[var(--color-primary)]/10 text-[var(--color-primary)] text-sm font-medium px-4 py-1.5 rounded-full mb-6">
          Our Team
        </span>
        <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-6">
          Meet the People Behind Our Mission
        </h1>
        <p class="text-lg text-gray-600">
          United by purpose, driven by compassion. Our team of dedicated individuals works tirelessly to create lasting positive change in communities across Bangladesh.
        </p>
      </div>
    </div>
  </section>

  <!-- Leadership Section -->
  <section class="py-20 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <span class="text-[var(--color-teal)] font-medium text-sm uppercase tracking-wider">Leadership</span>
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mt-2">Our Founder</h2>
      </div>

      <div class="max-w-4xl mx-auto">
        {teamMembers.map(member => (
          <div class="grid md:grid-cols-2 gap-12 items-center">
            <div class="relative">
              <div class="absolute -inset-4 bg-gradient-to-r from-[var(--color-primary)] to-[var(--color-teal)] rounded-2xl opacity-20 blur-xl"></div>
              <OptimizedImage
                src={member.image}
                alt={member.name}
                class="relative rounded-2xl shadow-xl w-full"
              />
            </div>
            <div>
              <h3 class="text-3xl font-bold text-gray-900 mb-2">{member.name}</h3>
              <p class="text-[var(--color-teal)] font-semibold text-lg mb-4">{member.role}</p>
              <p class="text-gray-600 leading-relaxed mb-6">{member.bio}</p>
              <div class="flex gap-4">
                {member.social.linkedin && (
                  <a href={member.social.linkedin} target="_blank" rel="noopener" class="w-10 h-10 bg-[var(--color-cream)] rounded-lg flex items-center justify-center text-gray-600 hover:bg-[var(--color-teal)] hover:text-white transition-colors">
                    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/></svg>
                  </a>
                )}
                {member.social.facebook && (
                  <a href={member.social.facebook} target="_blank" rel="noopener" class="w-10 h-10 bg-[var(--color-cream)] rounded-lg flex items-center justify-center text-gray-600 hover:bg-[var(--color-teal)] hover:text-white transition-colors">
                    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/></svg>
                  </a>
                )}
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Advisory Section -->
  <section class="py-20 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <span class="text-[var(--color-teal)] font-medium text-sm uppercase tracking-wider">Support Network</span>
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mt-2">Our Advisors & Partners</h2>
      </div>

      <div class="grid md:grid-cols-3 gap-8">
        {advisors.map(advisor => (
          <div class="bg-white rounded-2xl p-8 shadow-sm hover:shadow-lg transition-shadow">
            <div class="w-16 h-16 bg-gradient-to-br from-[var(--color-primary)] to-[var(--color-teal)] rounded-xl flex items-center justify-center mb-6">
              <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
              </svg>
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-2">{advisor.name}</h3>
            <p class="text-[var(--color-teal)] font-medium mb-3">{advisor.role}</p>
            <p class="text-gray-600">{advisor.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Join Team CTA -->
  <section class="py-20 bg-[var(--color-teal)]">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl md:text-4xl font-bold text-white mb-6">
        Join Our Team
      </h2>
      <p class="text-white/90 text-lg mb-8">
        We're always looking for passionate individuals to join our mission. Whether as a volunteer, advisor, or partner, there's a place for you.
      </p>
      <a href="/volunteer" class="inline-flex items-center gap-2 bg-white text-[var(--color-teal)] px-8 py-4 rounded-full font-semibold hover:bg-[var(--color-cream)] transition-colors">
        Become a Volunteer
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
        </svg>
      </a>
    </div>
  </section>

  <Footer slot="footer" />
</Layout>
